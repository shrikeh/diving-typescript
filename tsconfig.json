{
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist/js",
    "target": "esnext",
    "strict": true,
    "rootDir": ".",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "paths": {
      "*": ["types/*", "*"],
      "~app/*": ["src/app/*"],
      "~diving/*": ["src/diving/*"],
      "~components/*": ["src/components/*"],
      "~gulp/*": ["tools/gulp/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  }
}
